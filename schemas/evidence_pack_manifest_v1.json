{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/aigov/specs/schemas/evidence_pack_manifest_v1.json",
  "title": "Evidence Pack Manifest v1",
  "description": "Canonical manifest schema for runs/<run_id>/evidence_pack/manifest.json.",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "run_dir",
    "scenario_id",
    "target",
    "contracts",
    "hashes",
    "files"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "run_dir": {
      "type": "string"
    },
    "scenario_id": {
      "type": "string"
    },
    "target": {
      "type": "string"
    },
    "contracts": {
      "type": "object"
    },
    "hashes": {
      "type": "object"
    },
    "files": {
      "type": "array"
    }
  }
}
